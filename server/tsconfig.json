{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2020",
        "esModuleInterop": true,
        "rootDir": "./",
        "sourceMap": true,
        "outDir": "dist",
        "noEmit": true,
        "strict": true,
        "allowJs": true,
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["./**/*"],
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    }
}
